@using SkinShop.ViewModel.Login
@model SkinShop.ViewModel.Login.LoginViewModel

<div class="container">
    <div class="rowz">
    </div>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 text-center">
            <h1>Login</h1>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <form method="post">
            <span asp-validation-for="Email" class="text-danger"></span>
            <label class="label_Email">Email:</label>
            <input class="form-control" type="text" asp-for="Email" />

            <span asp-validation-for="Password" class="text-danger"></span>
            <label class="label_Password">Wachtwoord:</label>
            <input class="form-control" type="password" asp-for="Password" />
            <br />
            <button class="btn btn-default" type="submit">Login</button>
        </form>
    </div>
    <div class="col-lg-3"></div>
</div>